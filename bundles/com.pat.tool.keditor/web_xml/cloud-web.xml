    </listener>
    <!-- Start of Thinclient Specific Listeners -->
    <listener>
   		<listener-class>com.konylabs.middleware.common.AppContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.kony.web.util.TCValidationListener</listener-class>
	</listener>
